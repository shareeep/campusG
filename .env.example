# Stripe (Payment Service)
# Replace these sample keys with your actual Stripe keys when configuring your environment.
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Clerk (Authentication)
# Replace with your actual Clerk keys.
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Services URLs (used when running locally without Docker)
# Update these URLs if your local or deployed endpoints are different.
USER_SERVICE_URL=http://localhost:3001
ORDER_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3006

# Kafka
# Update the broker address if needed.
KAFKA_BROKERS=kafka:29092

# Temporal (Integrated Setup)
# Versions for Temporal components and Postgres configuration for the integrated Temporal DB.
TEMPORAL_VERSION=1.27.2
TEMPORAL_ADMINTOOLS_VERSION=1.27.2-tctl-1.18.2-cli-1.3.0
TEMPORAL_UI_VERSION=2.34.0
POSTGRESQL_VERSION=16
# Note: POSTGRES_PASSWORD and POSTGRES_USER below are used for the integrated Temporal DB.
# Your main application databases might require different credentials.
POSTGRES_PASSWORD=temporal
POSTGRES_USER=temporal
POSTGRES_DEFAULT_PORT=5432
